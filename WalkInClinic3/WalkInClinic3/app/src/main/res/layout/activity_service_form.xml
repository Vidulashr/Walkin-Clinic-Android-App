<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editingServices"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:background="#8ACFED"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/serviceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@drawable/dark_gradient_bg"
        android:text="Edit Services"
        android:textAlignment="center"
        android:textColor="#E4F3FA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="400sp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/service_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ServiceID: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_IDvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/spinner_dropdown_background" />

    </LinearLayout>

    <EditText
        android:id="@+id/serviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:ems="10"
        android:hint="  Service name..."
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/serviceRole"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_margin="5sp"
        android:background="@android:drawable/spinner_dropdown_background" />

    <EditText
        android:id="@+id/listserviceRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:ems="10"
        android:hint="  Default Rate ($/service)..."
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/light_gradient_bg"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_serviceSubmit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="75sp"
            android:background="@android:drawable/spinner_background"
            android:text="Add" />

        <Button
            android:id="@+id/btn_serviceFind"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="75sp"
            android:background="@android:drawable/spinner_background"
            android:text="Find" />

        <Button
            android:id="@+id/btn_UpdateService"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="75sp"
            android:background="@android:drawable/spinner_background"
            android:text="Update" />

        <Button
            android:id="@+id/btn_serviceDelete"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="75sp"
            android:background="@android:drawable/spinner_background"
            android:text="Delete" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="Services"
                android:textColor="#E8F2F7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="110sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="Role"
                android:textColor="#E8F2F7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="110sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="Rate"
                android:textColor="#E8F2F7"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <ListView
        android:id="@+id/viewingServices"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>