<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gradient_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_gradient_bg"
        android:text="Add/Remove Services"
        android:textAlignment="center"
        android:textColor="#DEF3FD"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/servicename_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/spinner_dropdown_background"
        android:ems="10"
        android:hint="  Find Service..."
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/servicerole_employee"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:textSize = "20sp"
        android:background="@android:drawable/spinner_dropdown_background" />

    <EditText
        android:id="@+id/servicerate_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/spinner_dropdown_background"
        android:ems="10"
        android:hint="  Modify Rate ($/Service)..."
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <Button
        android:id="@+id/servicefind_employee"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:drawable/spinner_background"
        android:text="Find" />

    <Button
        android:id="@+id/btn_addtoyourservices"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:drawable/spinner_background"
        android:text="ADD to your services" />

    <Button
        android:id="@+id/btn_deleteServiceClinic"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:drawable/spinner_background"
        android:text="Delete clinic service" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_gradient_bg"
        android:text="Available Services:"
        android:textColor="#EBF5FA"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/servicelistemployeelistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>