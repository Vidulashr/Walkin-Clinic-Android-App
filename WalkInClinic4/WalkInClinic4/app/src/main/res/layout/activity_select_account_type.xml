<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gradient_bg"
    tools:context=".SelectAccountType">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="420dp"
        android:layout_height="61dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:srcCompat="@android:color/white"
        tools:layout_editor_absoluteX="-5dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="430dp"
        android:layout_height="402dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/mainMessage2"
        app:srcCompat="@drawable/dark_gradient_bg"
        tools:layout_editor_absoluteX="-10dp" />

    <TextView
        android:id="@+id/mainMessage2"
        android:layout_width="293dp"
        android:layout_height="59dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="@string/selectType"
        android:textColor="#0C090A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patientSelected"
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_marginTop="100dp"
        android:background="@android:drawable/spinner_background"
        android:text="@string/patient"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainMessage2" />

    <Button
        android:id="@+id/employeeSelected"
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/spinner_background"
        android:text="@string/employee"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patientSelected"
        app:layout_constraintVertical_bias="0.22" />
</androidx.constraintlayout.widget.ConstraintLayout>